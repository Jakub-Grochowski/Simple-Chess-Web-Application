
@{
    ViewBag.Title = "Board";
}
@Styles.Render("~/Content/MyCSS.css")
<h2>Board</h2>
@ViewBag.Board.Size
<table>
    @{ for (int i = 0; i < ViewBag.Board.Size; i++)
        {<tr>
    @{
        for (int j = 0; j < ViewBag.Board.Size; j++)
        {
            if (ViewBag.Board.theGrid[i,j].IsLegalMove) { <td>+</td>}
              else if(ViewBag.Board.theGrid[i,j].IsOccupaied) { <td>X</td>}
                    else { <td>.</td>}
            
        }
        }
    </tr>
        }
    }
    </table>
